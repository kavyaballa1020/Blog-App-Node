<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/blog.css">
  <title>Blog</title>
</head>
<body>
  <header class="header">
    <h1 class="main-title">Blog</h1>
    <nav class="nav">
      <a href="/blog/create" class="nav-link create-link">Create New Post</a>
      <a href="/auth/logout" class="nav-link logout-link">Logout</a>
    </nav>
  </header>

  <main class="main-content">
    <ul class="post-list">
      <% posts.forEach(post => { %>
        <li class="post-item">
          <article class="post">
            <h2 class="post-title"><%= post.title %></h2>
            <% if (post.image) { %>
              <img src="<%= post.image %>" alt="Post Image" class="post-image">
            <% } %>
            <p class="post-content"><%= post.content %></p>
            <div class="post-actions">
              <a href="/blog/edit/<%= post._id %>" class="action-link edit-link">Edit</a>
              <form action="/blog/delete/<%= post._id %>" method="post" class="delete-form">
                <button type="submit" class="action-button delete-button">Delete</button>
              </form>
            </div>
          </article>
        </li>
      <% }) %>
    </ul>
  </main>
</body>
</html>
